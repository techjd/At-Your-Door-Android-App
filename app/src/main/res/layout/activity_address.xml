<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.Activities.AddressActivity">

    <include
        layout="@layout/toolbar" />

    <LinearLayout
        android:layout_below="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:padding="10dp"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">



            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:textSize="25dp"
                    android:textColor="#000000"
                    android:fontFamily="@font/bold"
                    android:id="@+id/primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Primary Address" />

                <TextView
                    android:textColor="#000000"
                    android:fontFamily="@font/regular"
                    android:textSize="20dp"
                    android:id="@+id/primaryAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Primary Address Of User" />
            </LinearLayout>

            <Button
                android:layout_gravity="center"
                android:textColor="#ffffff"
                android:fontFamily="@font/bold"
                android:id="@+id/editPrimaryAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/item_add_cart"
                android:text="EDIT" />
        </LinearLayout>


    </LinearLayout>


</RelativeLayout>